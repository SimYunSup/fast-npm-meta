{
  "type": "module",
  "version": "0.3.1",
  "private": true,
  "packageManager": "pnpm@10.7.0",
  "scripts": {
    "build": "pnpm -r run build",
    "build:server": "pnpm -C server run build",
    "dev": "pnpm -C server run dev",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "tsx scripts/release.ts",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@antfu/ni": "^24.3.0",
    "@antfu/utils": "^9.1.0",
    "@types/node": "^22.13.14",
    "bumpp": "^10.1.0",
    "eslint": "^9.23.0",
    "esno": "^4.8.0",
    "lint-staged": "^15.5.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.12.1",
    "tinyexec": "^1.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0",
    "vite": "^6.2.3",
    "vitest": "^3.0.9",
    "wait-port": "^1.1.0",
    "zx": "^8.4.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
